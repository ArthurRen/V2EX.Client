<controls:V2exWindow
    xmlns:controls="clr-namespace:V2EX.Client.Controls" x:Class="V2EX.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:pages="clr-namespace:V2EX.Client.Views.Pages"
        mc:Ignorable="d"
        FontFamily="Microsoft YaHei UI"
        Icon="pack://application:,,,/V2EX.Client.Resources;component/Images/v2ex_2x.png"
        Background="{DynamicResource WindowBackground}" d:DesignWidth="1099" d:DesignHeight="667"
        MinWidth="750" BorderThickness="2" BorderBrush="{DynamicResource WindowBorderBrush}"
        CaptionBackground="{DynamicResource GenericBackground}">

    <controls:V2exWindow.TitleContent>
        <TextBlock Text="Way To Explore!" FontFamily="Kaufmann BT" VerticalAlignment="Bottom" FontSize="16" />
    </controls:V2exWindow.TitleContent>

</controls:V2exWindow>
