<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:V2EX.Client.Controls"
                    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity">

    <Style TargetType="controls:CommonPage" BasedOn="{StaticResource {x:Type Page}}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:CommonPage">
                    <ContentPresenter Margin="10" Content="{TemplateBinding Content}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>